<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />
    
    <bean class="com.github.springular.server.configuration.SpringSecurityConfig" />
    
    
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<property name="messageConverters">
			<list>
    			<ref bean="jacksonMessageConverter"/>
			</list>
		</property>
	</bean>

	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerExceptionResolver">
	    <property name="messageConverters">
	        <list>
    			<ref bean="jacksonMessageConverter"/>
	        </list>
	    </property>
	</bean>

    <bean id="jacksonMessageConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"/>
	
    <bean id="userController" class="com.github.springular.server.rest.controller.UserController" />
    <bean id="authController" class="com.github.springular.server.rest.controller.AuthController" />
    <bean id="paymentController" class="com.github.springular.server.rest.controller.PaymentController" />
    <bean id="masterdataController" class="com.github.springular.server.rest.controller.MasterdataController" />

</beans>